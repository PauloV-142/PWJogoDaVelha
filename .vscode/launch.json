    "version": "0.2.0",
    "firefoxExecutable": "flatpak run org.mozilla.firefox",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch index.html",
            "file": "${workspaceFolder}/index.html"
        },
        {
            "type": "firefox",
            "request": "launch",
            "name": "Debug Jogo da Velha (Firefox ;)",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
        }
    ]
}